.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.header {
  position: fixed;
  background-color: #ffffff;
  height: 100rpx;
  width: 100%;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 3px 0 #e3e3e3;
  z-index: 99
}

.box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  background-color: #f5f5f5;
  height: 68rpx;
  width: 700rpx;
  color: #999999
}

.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  margin-top: 100rpx;
}

.head-img {
  width: 106rpx;
  height: 34rpx;
  margin-top: 40rpx;
}

.box image {
  margin-right: 10px;
  width: 14px;
  height: 14px;
  margin-bottom: -2px;
}

.book-container {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  /* 设置自动换行 */
  flex-wrap: wrap;
  /* 通过增加padding减少容器实际宽度来达到一行只放两本书 */
  padding: 0 90rpx 0 90rpx;
  /* 利用flex布局的均匀分布 */
  justify-content: space-between;
}

.book-container v-book {
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}